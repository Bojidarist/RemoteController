<Page
    x:Class="RCDesktopUI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RCDesktopUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="Login" />
        <TextBox
            Margin="8"
            IsReadOnly="False"
            Text="Hello">
        </TextBox>
        <Button
            Height="200"
            FontSize="{StaticResource FontSizeLarge}"
            Foreground="{StaticResource WhiteColorBrush}"
            IsEnabled="True"
            Style="{StaticResource RedCircleButton}">
            <ComboBox
                Width="50"
                Height="50"
                AllowDrop="False"
                Style="{StaticResource CircleComboBox}">
                <!--  Sample ComboBox items  -->
                <ComboBoxItem Content="a" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="b" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="c" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="d" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="e" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="f" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="g" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="h" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="i" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="j" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="k" Style="{StaticResource CircleComboBoxItem}" />
                <ComboBoxItem Content="l" Style="{StaticResource CircleComboBoxItem}" />
            </ComboBox>
        </Button>
    </StackPanel>
</Page>
