<Page
    x:Class="RCDesktopUI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RCDesktopUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource MaterialPrimaryMainBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.5" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="8"
            HorizontalContentAlignment="Center"
            FontSize="{StaticResource FontSizeVeryLarge}"
            IsEnabled="{Binding IsNotStartingServer}"
            Text="{Binding CurrentIP}" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Margin="8"
            Padding="8"
            Command="{Binding StartServerClickedCommand}"
            Content="{Binding StartServerButtonText}"
            FontSize="{StaticResource FontSizeBig}"
            Foreground="{StaticResource WhiteColorBrush}"
            IsEnabled="{Binding IsNotStartingServer}" />
    </Grid>
</Page>
