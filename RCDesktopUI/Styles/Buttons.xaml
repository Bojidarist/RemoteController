    <!--  Dark Circle Button  -->
    <Style
        x:Key="DarkCircleButton"
        BasedOn="{StaticResource BaseStyle}"
        TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border
                        x:Name="border"
                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                        Background="{StaticResource MaterialPrimaryDarkBrush}"
                        BorderBrush="{StaticResource MaterialPrimaryLightBrush}"
                        BorderThickness="1"
                        CornerRadius="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                        SnapsToDevicePixels="True">
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}"
                            ContentStringFormat="{TemplateBinding ContentStringFormat}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Focusable="False"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsDefaulted" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                        </Trigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <!--  All animations should be done in a storyboard  -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--  Duration is 0(hours):0(minutes):0.25(seconds)  -->
                                    <ColorAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="Background.Color"
                                        To="{StaticResource MaterialPrimaryMain}"
                                        Duration="0:0:0.25" />
                                    <ThicknessAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="2"
                                        Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <!--  All animations should be done in a storyboard  -->
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--  Duration is 0(hours):0(minutes):0.25(seconds)  -->
                                    <ColorAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="Background.Color"
                                        To="{StaticResource MaterialPrimaryDark}"
                                        Duration="0:0:0.25" />
                                    <ThicknessAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="BorderThickness"
                                        To="0.5"
                                        Duration="0:0:0.5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource MaterialPrimaryLightBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource MaterialPrimaryLightBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

